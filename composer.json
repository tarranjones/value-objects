{
    "name": "tarranjones/value-objects",
    "description": "Type-safe PHP Value Objects backed by filter_var and integer constraints.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "rector/rector": "^2.0",
        "roave/security-advisories": "dev-latest",
        "symplify/easy-coding-standard": "^12.0",
        "symplify/phpstan-rules": "^14.0",
        "tomasvotruba/class-leak": "^1.0",
        "tomasvotruba/type-coverage": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Tarranjones\\ValueObjects\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "process-timeout": 600
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage --min=100",
        "analyse": "phpstan analyse",
        "rector": "rector process",
        "rector:dry": "rector process --dry-run",
        "lint": "ecs check",
        "lint:fix": "ecs check --fix",
        "check": [
            "@analyse",
            "@lint",
            "@test"
        ]
    }
}
